// ============== External Stores Management ==============

// المحلات الخارجية
model ExternalStore {
  id            Int      @id @default(autoincrement())
  name          String
  ownerName     String
  phone1        String
  phone2        String?
  address       String?
  googleMapsUrl String?
  isActive      Boolean  @default(true)
  createdAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt

