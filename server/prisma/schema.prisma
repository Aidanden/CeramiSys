  invoiceNumber   String?
  total           Decimal               @default(0) @db.Decimal(18, 4)
  status          ExternalInvoiceStatus @default(PENDING)
  notes           String?
  rejectionReason String?
  createdAt       DateTime              @default(now())
  updatedAt       DateTime              @updatedAt
  reviewedAt      DateTime?
  reviewedBy      String?

