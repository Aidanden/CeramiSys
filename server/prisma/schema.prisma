  totalCostPerUnit Decimal  @db.Decimal(18, 4) // التكلفة الإجمالية للوحدة
  quantity         Decimal  @db.Decimal(20, 4) // الكمية المشتراة
  createdAt        DateTime @default(now())

  @@index([productId])
  @@index([purchaseId])
  @@index([companyId])
  @@index([createdAt])
